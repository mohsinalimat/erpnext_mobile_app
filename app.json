{
  "expo": {
    "name": "Prime ERP Mobile",
    "slug": "Prime ERP Mobile",
    "version": "2.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "This app uses your location to track your position on the map.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "This app uses your location to track your position on the map even when the app is in the background.",
        "NSLocationAlwaysUsageDescription": "This app uses your location to track your position on the map even when the app is in the background.",
        "UIBackgroundModes": [
          "location",
          "fetch"
        ],
        "NSAppTransportSecurity": {
          "NSExceptionDomains": {
            "paperware.jfmart.site": {
              "NSIncludesSubdomains": true,
              "NSThirdPartyExceptionRequiresForwardSecrecy": false
            }
          }
        },
        "ITSAppUsesNonExemptEncryption": false
      },
      "bundleIdentifier": "com.primetechbd.primeerp"
    },
    "android": {
      "package": "com.primetechbd.primeerp",
      "permissions": [
        "android.permission.INTERNET",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.FOREGROUND_SERVICE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "updates": {
      "url": "https://u.expo.dev/e9f29a80-2831-459a-905e-0aee547d8c75"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      "expo-web-browser",
      "expo-secure-store",
      "expo-updates"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e9f29a80-2831-459a-905e-0aee547d8c75"
      }
    },
    "owner": "primetechbd",
    "runtimeVersion": {
      "policy": "appVersion"
    }
  }
}
